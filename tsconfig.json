{
    "compilerOptions": {
      "lib": ["ESNext"],
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "node",
      "noUnusedLocals": false,
      "noUnusedParameters": false,
      "removeComments": true,
      "sourceMap": true,
      "target": "ES2020",
      "outDir": "lib"
    },
    "include": ["test/**/*.ts", "test/**/*.const.ts", "test/**/*.enum.ts", "test/**/*.util.ts", "test/vault/bigintextension.js"],
    "exclude": [
      "node_modules/**/*",
      ".webpack/**/*",
      "_warmup/**/*",
      ".vscode/**/*"
    ],
    "ts-node": {
      "require": ["tsconfig-paths/register"]
    }
  }